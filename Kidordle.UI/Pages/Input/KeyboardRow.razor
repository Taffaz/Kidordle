@using System.ComponentModel.DataAnnotations
@using KidordleGame
@using MudBlazor
@inject Game _game

@if (KeysToGenerate != null)
{
@foreach (var key in KeysToGenerate)
{
    <MudItem xs="1" Class="d-flex justify-center">
        <KeyboardButton Text="@key" OnClick="@(_ => _game.Input(key))" />
    </MudItem>
}

}

@code{
    [Parameter]
    public char[]? KeysToGenerate { get; set; }
}